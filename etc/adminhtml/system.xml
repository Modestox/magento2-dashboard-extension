                   showInStore="1">
                <label>Extension List</label>
                <field id="modestox_dashboard_extension_modules_list" translate="label" type="label" sortOrder="1"
                       showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Installed Extensions</label>
                    <frontend_model>Modestox\DashboardExtension\Block\Adminhtml\System\Config\ModulesList</frontend_model>
                </field>
            </group>
        </section>
    </system>
</config>
