        <tab id="modestox_tab" translate="label" sortOrder="-10000">
            <label>Extension List</label>
        </tab>

        <section id="modestox_dashboard_extension" translate="label" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
